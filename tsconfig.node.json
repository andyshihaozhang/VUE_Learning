{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "vite.config.ts",
    "src/mock/**/*",
    "src/types/**/*",
    "src/types/business/**/*",
    "src/types/api/**/*",
    "src/types/global/**/*"
  ]
}
